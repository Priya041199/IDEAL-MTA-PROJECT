															<ui:template>
																<m:Text text="{path:'cModel>EXPIRY_DATE', formatter:'.formatter.formatDate'}"/>
															</ui:template>
														</ui:Column>
														
														<!-- Invoice Date-->
														<ui:Column width="8rem" visible="true" hAlign="Center">
															<m:Label id="S2G2T1F5" text="Invoice Date" design="Bold"/>
															<ui:template>
