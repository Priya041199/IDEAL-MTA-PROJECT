<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ResponsivePopover id="myPopover" title="Comment" class="sapUiContentPadding" placement="Bottom" contentHeight="10em"
		contentWidth="15em">
		<beginButton></beginButton>
		<endButton>
			<Button text="Close" press="handleCloseButton"/>
		</endButton>
		<content>
			<Text text="{sCommentJson>/COMMENT}"/>
			<VBox fitContainer="true" justifyContent="Center" alignContent="Center" alignItems="Center"
				visible="{= ${sCommentJson>/COMMENT} === '' ? true : false}">
				<Text text="No Comment" textAlign="Center"/>
			</VBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>