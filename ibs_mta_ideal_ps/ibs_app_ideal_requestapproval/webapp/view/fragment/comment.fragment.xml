<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog id="idApproveDialog" icon="sap-icon://message-information" title="" titleAlignment="Center" draggable="true" resizable="true"
		contentWidth="34rem" class="sapUiSizeCompact">
		<VBox class="sapUiSmallMarginTop">
			<Label text="Comment :" id="id_lable" design="Bold" required="true" class="sapUiSmallMarginBegin"/>
			<TextArea class="sapUiSmallMarginBegin" id="id_comment" width="32rem" value="" rows="4" maxLength="1000" showExceededText="true"
				required="false" liveChange="handleLiveChange"/>
		</VBox>
		<buttons>
			<Button icon="sap-icon://accept" text="Yes" id="id_approve" press="onSubmitApproval"></Button>
			<Button icon="sap-icon://accept" text="Yes" id="id_reject" press="onSubmitRejection"></Button>
			<Button icon="sap-icon://cancel" text="No" press="_closeDialog"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>