<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Dialog id="idTestEmailDialog" title="Test Email" contentWidth="400px" titleAlignment="Center" class="sapUiSizeCompact">
		<f:SimpleForm id="idSimpleFormOpenText" editable="false" layout="ColumnLayout" title="" columnsM="2" columnsL="2" columnsXL="2">
			<f:content>
				<Label text="From" required="true"/>
				<Input id="idFormInp" editable="false" value=""></Input>

				<Label text="To" required="true"/>
				<Input id="idToInp" editable="true" value=""></Input>

				<Label text="Cc" required="false"/>
				<Input id="idCcInp" editable="true" value=""></Input>

				<Label text="Subject" required="true"/>
				<Input id="idSubjectInp" editable="true" value="Test Email"></Input>
				
				<Label text="Message" required="true"/>
				<TextArea id="idMessageTextArea" rows="8" value="Test Message."></TextArea>
			</f:content>
		</f:SimpleForm>
		<buttons>
			<Button text="Submit" press="handleSubmitTestEmail" visible="{oPropertyModel>/submit}" icon="sap-icon://accept"/>
			<Button text="Close" press="handleCloseTestEmail" icon="sap-icon://cancel"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>